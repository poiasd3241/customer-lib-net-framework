@model IEnumerable<CustomerLib.Business.Entities.Note>

<table class="table">
	<tr>
		<th>Content</th>
		<th></th>
	</tr>

	@foreach (var note in Model)
	{
		<tr>
			<td>@note.Content</td>
			<td>
				@Html.ActionLink("Edit", "Edit", "Notes",
					new { noteId = note.NoteId }, new { @class = "btn btn-secondary" })
				@Html.ActionLink("Delete", "Delete", "Notes",
					new { noteId = note.NoteId }, new { @class = "btn btn-danger" })
			</td>
		</tr>
	}

</table>